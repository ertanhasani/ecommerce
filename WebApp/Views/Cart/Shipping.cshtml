@model WebApp.ViewModels.ShippingViewModel

@{
    ViewData["Title"] = "ارسال";
}

<style>

    button {
        cursor: pointer;
    }
    
    </style>

<div class="contenti">

    <div class="container">

        <form id="form" method="post" asp-action="Shipping">

            <div class="row">

                <div class="col-md-12">

                    <h4 style="text-align: center">آدرس پستی</h4>

                    <hr/>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">

                        <label asp-for="@Model.FullName"></label>

                        <input type="text" asp-for="FullName" class="form-control"/>

                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>

                    </div>

                    <div class="form-group">

                        <label asp-for="@Model.State"></label>

                        <input type="text" asp-for="State" class="form-control"/>

                        <span asp-validation-for="@Model.State" class="text-danger"></span>

                    </div>

                    <div class="form-group">

                        <label asp-for="@Model.City"></label>

                        <input type="text" asp-for="City" class="form-control"/>

                        <span asp-validation-for="@Model.City" class="text-danger"></span>

                    </div>

                    <div class="form-group">

                        <label asp-for="@Model.Address"></label>

                        <input type="text" asp-for="Address" class="form-control"/>

                        <span asp-validation-for="@Model.Address" class="text-danger"></span>

                    </div>

                    <div class="form-group">

                        <label asp-for="@Model.PostalCode"></label>

                        <input type="text" asp-for="PostalCode" class="form-control"/>

                        <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>

                    </div>

                </div>

            </div>

            <div class="row">

                <div class="col-md-12 text-center">

                    <button type="submit" id="submitBtn" class="btn btn-default" style="background: #04adbf; color:white; ">ثبت</button>

                </div>

            </div>

        </form>

    </div>

</div>