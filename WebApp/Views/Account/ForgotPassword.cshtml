@model WebApp.ViewModels.ForgotPasswordView
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

<section class="container d-flex justify-content-center">
    
    <div class="col-12 col-md-7 col-lg-5 formComponent-holder">
        
            <h3 class="text-center">@ViewData["Title"]</h3>
        
            <div>
        
                <div class="">
        
                    <h6 class="text-right">ایمیل را وارد کنید</h6>
        
                    <form method="post">
        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
                        <div class="form-group">
        
                            <input asp-for="Email" class="form-control formComponent-input"/>
        
                            <span asp-validation-for="Email" class="text-danger"></span>
        
                        </div>
        
                        <button id="loginBtn" type="submit" class="btn btn-default formComponent-first-button w-100">ثبت</button>
        
                    </form>
        
                </div>
        
            </div>
        
    </div>

</section>

@section Styles
{
    <environment include="Development">

        <link href="~/css/FormComponent.css" rel="stylesheet"/>

    </environment>

    <environment exclude="Development">

        <link href="~/css/bundles/FormComponent.min.css" rel="stylesheet"/>


    </environment>

}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}