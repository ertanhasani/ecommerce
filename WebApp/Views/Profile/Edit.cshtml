@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "_Layout";
}

<section class="d-flex justify-content-center container text-right">

    <div class="col-12 col-md-7 col-lg-6 formComponent-holder">

        <form id="form" method="post" asp-action="Edit">

            <div class="row">

                <input type="hidden" asp-for="Id"/>

                <div class="d-flex flex-wrap justify-content-between mt-3">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group col-12 col-sm-6">

                        <label asp-for="@Model.FirstName"></label>

                        <input type="text" asp-for="FirstName" class="form-control profile formComponent-input"/>

                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>

                    </div>

                    <div class="form-group col-12 col-sm-6">

                        <label asp-for="@Model.LastName"></label>

                        <input type="text" asp-for="LastName" class="form-control profile formComponent-input"/>

                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>

                    </div>

                    <div class="form-group col-12 col-sm-6">

                        <label asp-for="@Model.BirthDateString"></label>

                        <input type="text" asp-for="BirthDateString" class="form-control profile persianDatepicker formComponent-input"/>

                        <span asp-validation-for="@Model.BirthDateString" class="text-danger"></span>

                    </div>

                    <div class="form-group col-12 col-sm-6">

                        <label asp-for="@Model.Email"></label>

                        <input type="text" asp-for="Email" readonly="readonly" class="form-control formComponent-input"/>

                        <span asp-validation-for="@Model.Email" class="text-danger"></span>

                    </div>

                    <div class="form-group col-12 col-sm-6">

                        <label asp-for="@Model.CurrentPassword"></label>

                        <input type="password" asp-for="CurrentPassword" class="form-control password formComponent-input"/>

                        <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>

                    </div>

                    <div class="form-group col-12 col-sm-6">

                        <label asp-for="@Model.NewPassword"></label>

                        <input type="password" asp-for="NewPassword" class="form-control password formComponent-input"/>

                        <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>

                    </div>

                    <div class="form-group col-12 col-sm-6">

                        <label asp-for="@Model.ConfirmPassword"></label>

                        <input type="password" asp-for="ConfirmPassword" class="form-control password formComponent-input"/>

                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                    </div>

                </div>

                <div class="col-md-12">

                    <div class="text-left">

                        <a asp-action="Index" asp-controller="Profile" asp-route-userId="@Model.Id" class="btn btn-default formComponent-second-button">لغو</a>

                        <button id="submitBtn" type="submit" class="btn formComponent-first-button">ذخیره</button>

                    </div>

                </div>

            </div>

        </form>

    </div>

</section>

@section Styles
{
    <environment include="Development">

        <link href="~/css/FormComponent.css" rel="stylesheet"/>

    </environment>

    <environment exclude="Development">

        <link href="~/css/bundles/FormComponent.min.css" rel="stylesheet"/>
        
    </environment>

}

