@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row contenti justify-content-md-center">
    <div class="col-md-4">
        <form id="form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <button type="button" id ="submitBtn" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section scripts{ 
    <script>
        $('#form').bind('keypress keydown keyup', function (e) {
            if (e.keyCode == 13) { e.preventDefault(); }
        });

        $('#submitBtn').on('click', function () {
            var hasErrors = false;

            $('#form input').each(function (i, item) {
                var value = $(this).val();
                if (value == '' || value == null) {
                    $(this).addClass('validateInput');
                    hasErrors = true;
                }
                else {
                    $(this).removeClass('validateInput');
                }
            });
            if (hasErrors) {
                return false;
            }
            else {
                $('#form').submit();
            }
        });

        $('input').on('input', function () {
            var value = $(this).val();

            if (value == null || value == '') {
                $(this).addClass('validateInput')
            }
            else {
                $(this).removeClass('validateInput');
            }
        });
    </script>
}
